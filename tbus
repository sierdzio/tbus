#!/bin/bash
# Main tbus script
if [ "${1}" = "-h" ] || [ "${1}" = "--help" ]; then
  echo "tbus - torrent-based update system
Copyright (c) 2013 by Tomasz Siekierda, sierdzio@gmail.com

This is free software, for more info see the LICENSE file, or run tbus -l"
  exit
fi

if [ "${1}" = "-v" ] || [ "${1}" = "--version" ]; then
  echo "tbus 0.0.1"
  exit
fi

if [ "${1}" = "-l" ] || [ "${1}" = "--license" ]; then
  cat ./LICENSE
  echo ""
  exit
fi

if [ "${1}" = "init" ]; then
  shift
  tbus-init "$@"
  exit
fi

if [ "${1}" = "add" ]; then
  shift
  tbus-add "$@"
  exit
fi

if [ "${1}" = "user" ]; then
  shift
  tbus-user "$@"
  exit
fi

if [ "${1}" = "clone" ] || [ "${1}" = "connect" ]; then
  shift
  tbus-clone "$@"
  exit
fi

echo "tbus does not do anything useful yet"

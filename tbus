#!/bin/sh
# Main tbus script
if [ "${1}" = "-h" ] || [ "${1}" = "--help" ]; then
  echo "tbus - torrent-based update system"
  echo "Copyright (c) 2013 by Tomasz Siekierda, sierdzio@gmail.com"
  echo ""
  echo "This is free software, for more info see the LICENSE file, or run tbus -l"
  exit
fi

if [ "${1}" = "-l" ] || [ "${1}" = "--license" ]; then
  cat ./LICENSE
  echo ""
  exit
fi

if [ "${1}" = "init" ]; then
  ./tbus-init
fi

echo "tbus does not do anything useful yet"
